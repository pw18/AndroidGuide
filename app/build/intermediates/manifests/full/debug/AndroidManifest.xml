<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.androidguide"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="23" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="DiseasesGuide"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.androidguide.MainActivity"
            android:label="DiseasesGuide"
            android:theme="@style/Theme.AppCompat.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.androidguide.ManuActivity"
            android:label="@string/title_activity_manu" />
        <activity
            android:name="com.example.androidguide.ListHospitalActivity"
            android:label="@string/title_activity_list_hospital" />
        <activity
            android:name="com.example.androidguide.AdminActivity"
            android:label="@string/title_activity_admin" />
        <activity
            android:name="com.example.androidguide.DataDiseasesActivity"
            android:label="@string/title_activity_data_diseases" />
        <activity
            android:name="com.example.androidguide.DataPharmaceuticalActivity"
            android:label="@string/title_activity_data_pharmaceutical" />
        <activity
            android:name="com.example.androidguide.DataMedicinetraditionalActivity"
            android:label="@string/title_activity_data_medicinetraditional" />
        <activity
            android:name="com.example.androidguide.DataAidActivity"
            android:label="@string/title_activity_data_aid" />
        <activity
            android:name="com.example.androidguide.MainMenuActivity"
            android:label="@string/title_activity_main_menu"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>